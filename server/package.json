{
  "name": "lokalhunt-server",
  "version": "1.0.0",
  "description": "Lokalhunt API Server - Express.js backend with PostgreSQL and Prisma ORM",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "start:dev": "node server.js",
    "build": "npx prisma generate",
    "migrate:deploy": "npx prisma migrate deploy",
    "prestart": "npm run migrate:deploy",
    "postinstall": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:migrate": "npx prisma migrate dev",
    "db:reset": "npx prisma migrate reset",
    "db:seed:categories": "node seeds/categories.js",
    "db:seed:education": "node seeds/education-qualifications.js",
    "db:seed:cities": "node seeds/cities.js",
    "db:seed:plans": "node seeds/plans.js",
    "db:seed:all": "node seeds/seed-all.js",
    "health": "curl -f http://localhost:5000/health || exit 1"
  },
  "keywords": [
    "express",
    "postgresql",
    "prisma",
    "job-portal",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@google-cloud/storage": "^7.16.0",
    "@prisma/client": "^6.14.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "firebase-admin": "^13.4.0",
    "fs-extra": "^11.3.1",
    "groq-sdk": "^0.30.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "path": "^0.12.7",
    "sharp": "^0.33.5",
    "sib-api-v3-sdk": "^8.5.0",
    "tailwindcss": "^3.4.17",
    "springedge": "^1.0.6"
  },
  "devDependencies": {
    "eslint": "^9.33.0",
    "nodemon": "latest",
    "prisma": "^6.14.0"
  }
}
